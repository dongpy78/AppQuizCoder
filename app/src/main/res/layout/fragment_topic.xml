<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg_gradient_topic"
    android:layout_height="match_parent"
    tools:context=".TopicActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="50dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:text="Are You Ready To"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="#24B8C3"
                    android:fontFamily="@font/nunito"
                    android:textSize="36sp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:text="Challenger YourSelf"
                    android:textStyle="bold"
                    android:textColor="#DD1818 "
                    android:fontFamily="@font/nunito"
                    android:textAlignment="center"
                    android:textSize="34sp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:text="Select your favourite topic!"
                    android:textStyle="bold"
                    android:textColor="#38EF7D "
                    android:fontFamily="@font/nunito"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="14dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/react_card"
                    android:layout_gravity="center"
                    app:cardCornerRadius="16dp"
                    android:layout_width="300dp"
                    android:layout_margin="10dp"
                    app:cardElevation="6dp"
                    android:layout_height="144dp"
                    android:layout_weight="1">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_gradient_card"/>

                    <ImageView
                        android:src="@drawable/react_img"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"
                        android:layout_width="110dp"
                        android:layout_height="110dp"/>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/javascript_card"
                    android:layout_gravity="center"
                    app:cardCornerRadius="14dp"
                    android:layout_width="300dp"
                    android:layout_margin="10dp"
                    app:cardElevation="6dp"
                    android:layout_height="144dp"
                    android:layout_weight="1">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_gradient_card"/>

                    <ImageView
                        android:src="@drawable/javascript"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"
                        android:layout_width="110dp"
                        android:layout_height="110dp"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/html_card"
                    android:layout_gravity="center"
                    app:cardCornerRadius="14dp"
                    android:layout_width="300dp"
                    android:layout_margin="10dp"
                    app:cardElevation="6dp"
                    android:layout_height="144dp"
                    android:layout_weight="1">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_gradient_card"/>

                    <ImageView
                        android:src="@drawable/htmt"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"
                        android:layout_width="110dp"
                        android:layout_height="110dp"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/python_card"
                    android:layout_gravity="center"
                    app:cardCornerRadius="14dp"
                    android:layout_width="300dp"
                    android:layout_margin="10dp"
                    app:cardElevation="6dp"
                    android:layout_height="144dp"
                    android:layout_weight="1">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_gradient_card"/>

                    <ImageView
                        android:src="@drawable/python"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"
                        android:layout_width="110dp"
                        android:layout_height="110dp"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cplus_card"
                    android:layout_gravity="center"
                    app:cardCornerRadius="14dp"
                    android:layout_width="300dp"
                    android:layout_margin="10dp"
                    app:cardElevation="6dp"
                    android:layout_height="144dp"
                    android:layout_weight="1">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_gradient_card"/>

                    <ImageView
                        android:src="@drawable/cplus"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"
                        android:layout_width="110dp"
                        android:layout_height="110dp"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/java_card"
                    android:layout_gravity="center"
                    app:cardCornerRadius="14dp"
                    android:layout_width="300dp"
                    android:layout_margin="10dp"
                    app:cardElevation="6dp"
                    android:layout_height="144dp"
                    android:layout_weight="1">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_gradient_card"/>

                    <ImageView
                        android:src="@drawable/java"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"
                        android:layout_width="110dp"
                        android:layout_height="110dp"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>