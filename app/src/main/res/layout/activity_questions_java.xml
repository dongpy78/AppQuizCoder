<!-- Thêm vào đây mã XML của bạn với các chỉnh sửa nhỏ để tối ưu hóa bố cục -->

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg_gradient_topic"
    android:layout_height="match_parent"
    tools:context=".QuestionsJava">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- LinearLayout bao bọc nội dung -->
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Nội dung của bạn -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- ImageView và TextView -->
                <ImageView
                    android:layout_margin="12dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/react_img" />

                <TextView
                    android:layout_margin="12dp"
                    android:id="@+id/timer"
                    android:layout_width="match_parent"
                    android:text="05:00"
                    android:textAlignment="textEnd"
                    android:textSize="42sp"
                    android:textColor="#fffff0"
                    android:fontFamily="@font/ninito_extra_bold"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="16dp"
                android:progress="0"
                android:background="@drawable/bg_gradient_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:progressTint="#008000"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="12dp"
                    android:id="@+id/no_indicator"
                    android:layout_width="wrap_content"
                    android:text="Question: 5/10"
                    android:fontFamily="@font/nunito"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#f1f3f5"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginRight="12dp"
                    android:id="@+id/score"
                    android:textAlignment="textEnd"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/nunito"
                    android:textStyle="bold"
                    android:text="0/100"
                    android:textSize="16sp"
                    android:textColor="#f1f3f5"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/question"
                    android:text=""
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="#f1f3f5"
                    android:textStyle="normal"
                    android:textSize="20sp"
                    android:fontFamily="@font/nunito"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <android.widget.LinearLayout
                android:id="@+id/options_container"
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <android.widget.Button
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:background="@drawable/button_border_question"
                    android:backgroundTint="#2291B1"
                    android:text=""
                    android:textStyle="normal"
                    android:textColor="#f1f3f5"
                    android:textAlignment="textStart"
                    android:paddingLeft="18dp"
                    android:textAllCaps="false"
                    android:layout_height="wrap_content" />

                <android.widget.Button
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:background="@drawable/button_border_question"
                    android:text=""
                    android:backgroundTint="#2291B1"
                    android:textStyle="normal"
                    android:textColor="#f1f3f5"
                    android:layout_marginTop="16dp"
                    android:textAllCaps="false"
                    android:textAlignment="textStart"
                    android:paddingLeft="18dp"
                    android:layout_height="wrap_content" />

                <android.widget.Button
                    android:id="@+id/button3"
                    android:layout_width="match_parent"
                    android:background="@drawable/button_border_question"
                    android:text=""
                    android:textColor="#f1f3f5"
                    android:backgroundTint="#2291B1"
                    android:textStyle="normal"
                    android:layout_marginTop="16dp"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:paddingLeft="18dp"
                    android:layout_height="wrap_content" />

                <android.widget.Button
                    android:id="@+id/button4"
                    android:layout_width="match_parent"
                    android:background="@drawable/button_border_question"
                    android:text=""
                    android:layout_marginTop="16dp"
                    android:backgroundTint="#2291B1"
                    android:textStyle="normal"
                    android:textColor="#f1f3f5"
                    android:textAlignment="textStart"
                    android:paddingLeft="18dp"
                    android:textAllCaps="false"
                    android:layout_height="wrap_content" />
            </android.widget.LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="24dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <android.widget.Button
                    android:id="@+id/exit_btn"
                    android:layout_width="110dp"
                    android:background="@drawable/bg_button_next_exit"
                    android:text="Exit"
                    android:fontFamily="@font/nunito"
                    android:textColor="#f1f3f5"
                    android:layout_marginTop="16dp"
                    android:padding="14dp"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="0dp" />

                <android.widget.Button
                    android:id="@+id/next_btn"
                    android:layout_width="110dp"
                    android:background="@drawable/bg_button_next_exit"
                    android:text="Next"
                    android:fontFamily="@font/nunito"
                    android:textColor="#f1f3f5"
                    android:layout_marginTop="16dp"
                    android:padding="10dp"

                    android:layout_marginLeft="86dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone" /> <!-- Initially hide the next button -->
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


</ScrollView>